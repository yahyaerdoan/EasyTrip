@using EasyTrip.Models.Entities
@model List<Comment>
@{
    ViewBag.Title = "CommentList";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2>Comment List</h2>


<table class="table table-bordered">

    <tr style="background-color: antiquewhite">
        <th>Id</th>
        <th>Name</th>
        <th>Email</th>
        <th>Comment</th>
        <th>BlogId</th>
        <th>Delete</th>
        <th>Update</th>
        <th>Blog Detail</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.CommentId</td>
            <td>@item.UserName</td>
            <td>@item.Email</td>
            <td>@item.Remark</td>
            <td>@item.Blog.Title</td>
            <td><a href="/Admin/DeleteComment/@item.CommentId" class="btn btn-danger">Delete</a></td>
            <td><a href="/Admin/CallUpdateComment/@item.CommentId" class="btn btn-success">Update</a></td>
            <td><a href="" class="btn btn-primary">Blog Detail</a></td>
        </tr>
    }
</table>

