@using EasyTrip.Models.Entities
@model List<Blog>
<div class="con-bot">
    @foreach (var item in Model)
    {
        <div class="right"  style="margin-right:27.3px">
            <div class="bot-left">
                <img src="@item.ImageUrl" style="width:375px; height:150px;" alt="" />
            </div>
            <div class="left-text">
                <h4> @item.Title</h4>
                <span class="doller">@item.Date.ToString("MM.dd.yyyy")</span>
                <p>@item.Description.Substring(0, 100)</p>
                <p>
                    <a href="/Blog/BlogDetail/@item.BlogId"> <span class="read"> Read More >> </span></a>
                </p>
            </div>
        </div>
    }
    <div class="clear"></div>
</div>
