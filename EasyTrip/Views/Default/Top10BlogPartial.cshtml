@using EasyTrip.Models.Entities
@model List<Blog>
<div class="padding">
    <h4>Top 10 Blogs </h4>
    <ul class="list list-pad">
        @{ int i = 0;}
        @foreach (var item in Model)
        {
            <li class="list-bg">
                <span @{i++;}>@i.</span>
                <a href="/Blog/BlogDetail/@item.BlogId">@item.Title</a>
            </li>
        }
    </ul>
    <a href="#" class="link1">See all hotels</a>
</div>
