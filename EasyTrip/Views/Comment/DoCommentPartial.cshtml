<div class="content-form">
    <h3>Leave a comment</h3>
    <form method="post" action="/Comment/DoCommentPartial/">
        <input type="text" placeholder="BlogId" value="@ViewBag.BlogId" name="BlogId" />
        <input type="text" placeholder="Name" required name="UserName" />
        <input type="text" placeholder="Email" required name="Email" />
        <textarea placeholder="Message" name="Remark"></textarea>
        <input type="submit" value="SEND" />
    </form>
</div>

