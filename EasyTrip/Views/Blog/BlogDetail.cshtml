@model EasyTrip.Models.Entities.Comment
@{
    ViewBag.Title = "BlogDetail";
    Layout = "~/Views/Shared/EasyTripLayout.cshtml";
}
<!DOCTYPE HTML>
<html>
@Html.Partial("/Views/Partial/ScriptPartial.cshtml")
<body>
    <div class="single">
        <div class="container">
            <div class="col-md-8 single-main">
                <div class="single-grid">
                    @foreach (var item in Model.BlogValue)
                    {
                        <h2 style="color: #3d3d3d">--@item.Title--</h2>
                        <img src="@item.ImageUrl" alt="" />
                        <p> @item.Description</p>
                    }

                </div>

                @foreach (var item in Model.CommentValue)
                {
                    <ul class="comment-list">
                        <li>
                            <img src="~/Templates/BlogTemplate/images/avatar.png" class="img-responsive" alt="">
                            <div class="desc">
                                <p>
                                    <b>@item.UserName: </b> @item.Remark
                                </p>
                            </div>
                            <div class="clearfix"></div>
                        </li>
                    </ul>
                }

                <div class="content-form">
                    <h3>Leave a comment</h3>
                    <form>
                        <input type="text" placeholder="Name" required />
                        <input type="text" placeholder="Email" required />
                        <input type="text" placeholder="Phone" required />
                        <textarea placeholder="Message"></textarea>
                        <input type="submit" value="SEND" />
                    </form>
                </div>
            </div>

            <div class="col-md-4 side-content" style="margin-top:5.48rem">
                <div class="recent">
                    <h3>RECENT POSTS</h3>
                    <ul>
                        <li>
                            <a href="#">Aliquam tincidunt mauris</a>
                        </li>
                        <li>
                            <a href="#">Vestibulum auctor dapibus  lipsum</a>
                        </li>
                        <li>
                            <a href="#">Nunc dignissim risus consecu</a>
                        </li>
                        <li>
                            <a href="#">Cras ornare tristiqu</a>
                        </li>
                    </ul>
                </div>
                <div class="comments">
                    <h3>RECENT COMMENTS</h3>
                    <ul>
                        <li>
                            <a href="#">Amada Doe </a> on
                            <a href="#">Hello World!</a>
                        </li>
                        <li>
                            <a href="#">Peter Doe </a> on
                            <a href="#"> Photography</a>
                        </li>
                        <li>
                            <a href="#">Steve Roberts  </a> on
                            <a href="#">HTML5/CSS3</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</body>
</html>